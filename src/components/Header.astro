---
import { MENU } from '../config'
import NavMenu from '@components/NavMenu'
---

<header class='text-white body-font bg-primary'>
	<div class='container mx-auto flex flex-wrap p-5 items-center'>
		<NavMenu client:visible />
		<a class='flex title-font font-medium items-center mb-0 m-auto lg:ml-0' href='/'>
			<img src='/icon.svg' alt='' class='w-10 h-10' />
			<span class='ml-3 text-xl'>Alameda de Cervera</span>
		</a>
		<nav class='md:ml-auto flex-wrap items-center justify-center hidden lg:block'>
			{
				MENU.map(({ title, href }) => (
					<a class='mr-5 hover:text-gray-200' href={href}>
						{title}
					</a>
				))
			}
		</nav>
	</div>
</header>
