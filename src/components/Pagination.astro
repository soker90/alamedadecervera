---
const { url, page} = Astro.props;
const selectedPageStyles = currentPage => currentPage === page.currentPage ? 'text-primary font-bold': '';
const blockStyle = 'text-gray-300 pointer-events-none'
const activeStyle = 'text-gray-800 hover:text-gray-800 hover:bg-gray-200'
---
<div class="flex justify-center">
  <nav aria-label="Page navigation example">
    <ul class="flex list-style-none">
      <li class="page-item disabled">
        <a class={`page-link relative block py-1.5 px-3 rounded border-0 bg-transparent 
        outline-none transition-all duration-300 text-gray-800 hover:text-gray-800 hover:bg-gray-200 
        focus:shadow-none ${page.url.prev ? activeStyle : blockStyle}`}
            href={page.url.prev} tabindex="-1" aria-disabled="true">Anterior</a>
      </li>
      
      { Array.from({ length: page.lastPage }, (_, index) => index + 1).map( num => (
        <li class="page-item">
          <a class={`page-link relative block py-1.5 px-3 rounded border-0 bg-transparent outline-none transition-all duration-300 text-gray-800 hover:text-gray-800 hover:bg-gray-200 focus:shadow-none ${selectedPageStyles(num)}`}
             href={`${url}/${num}`}>{num}</a>
        </li>
      ))}
    
      <li class="page-item"><a
        class={`page-link relative block py-1.5 px-3 rounded border-0 bg-transparent outline-none 
          transition-all duration-300 text-gray-800 hover:text-gray-800 hover:bg-gray-200 focus:shadow-none ${page.url.next ? activeStyle : blockStyle}`}
        href={page.url.next}>Siguiente</a></li>
    </ul>
  </nav>
</div>