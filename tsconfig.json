{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		// Preact specific settings
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@constants/*": ["src/constants/*"],
			"@layouts/*": ["src/layouts/*"],
			"@utils": ["src/utils"]
		},
		"strictNullChecks": true
	}
}
